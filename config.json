{
  "database": {
    "directory": "waspdb"
  },
  "logger": {
    "level": "debug",
    "disableCaller": false,
    "disableStacktrace": true,
    "encoding": "console",
    "outputPaths": [
      "stdout",
      "wasp.log"
    ],
    "disableEvents": true
  },
  "network": {
    "bindAddress": "0.0.0.0",
    "externalAddress": "auto"
  },
  "node": {
    "disablePlugins": [],
    "enablePlugins": []
  },
  "users": {
    "admin": {
      "password": "wasp",
      "claims": ["dashboard", "api", "chain.read", "chain.write"]
    }
  },
  "accounts": [
    {
      "username": "wasp",
      "password": "wasp",
      "claims": ["dashboard", "api", "chain.read", "chain.write"]
    }
  ],
  "webapi": {
    "auth": {
      "jwt": {
        "durationHours": 24
      },
      "basic": {
        "userName": "admin"
      },
      "ip": {
        "whitelist": ["127.0.0.1"]
      },
      "addRoutes": true,
      "scheme": "jwt"
    },
    "bindAddress": "0.0.0.0:9090"
  },
  "dashboard": {
    "auth": {
      "jwt": {
        "durationHours": 24
      },
      "basic": {
        "userName": "admin"
      },
      "ip": {
        "whitelist": ["127.0.0.1"]
      },
      "addRoutes": true,
      "scheme": "ip"
    },
    "bindAddress": "0.0.0.0:7000"
  },
  "peering":{
    "port": 4000,
    "netid": "127.0.0.1:4000"
  },
  "nodeconn": {
    "address": "127.0.0.1:5000"
  },
  "nanomsg":{
    "port": 5550
  },
  "metrics":{
    "bindAddress": "127.0.0.1:2112",
    "enabled": true
  }
}
