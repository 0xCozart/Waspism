{{define "title"}}Consensus status{{end}}

{{define "body"}}
<div class="card fluid">
	<h2 class="section">Workflow</h2>
	<table>
		<thead>
			<tr>
				<th>Flag name</th>
				<th>Status</th>
				<th>Triger time</th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<td>State received</td>
				<td>
					<input type="checkbox" disabled ="true"
						{{- if (.Status.IsStateReceived) -}}
							checked
						{{- end -}}
					>
				</td>
				<td></td>
			</tr>
			<tr>
				<td>Batch proposal sent</td>
				<input type="checkbox" disabled ="true"
					{{- if (.Status.IsBatchProposalSent) -}}
						checked
					{{- end -}}
				>
				<td>{{ (formatTimestampOrNever (.Status.GetBatchProposalSentTime)) }}</td>
			</tr>
		</tbody>
	</table>
</div>
{{end}}
